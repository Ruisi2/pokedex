---
interface Props {
	name: string;
	url: string;
	peso: number;
}

const { name, url, peso } = Astro.props;
---

<div class="bg-gray-600 w-full mt-5 p-3">
	<h1 id="name" class="text-4xl text-center">{name}</h1>
	<img id="img" src={url} alt={name} class="w-80 max-w-xs">
	<p id="peso" class="text-center">{peso} g</p>
</div>

<style>
	* {
		color: white;
	}
</style>
